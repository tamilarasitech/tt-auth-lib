{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",

    "rootDir": "./src",
    "outDir": "./lib",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "resolveJsonModule": true,

    "types": ["node"],

    "isolatedModules": false
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}
